{
    "variables": {
        "cpus": "1",
        "mem": "1024",
        "disk": "8192",
        "ssh_user": "root",
        "ssh_pass": "vagrant",
        "vm_name": "openbsd66"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "OpenBSD_64",
            "boot_wait": "20s",
            "vm_name": "{{user `vm_name`}}",
            "guest_additions_mode": "disable",
            "iso_url": "https://cdn.openbsd.org/pub/OpenBSD/6.6/amd64/install66.iso",
            "iso_checksum_url": "https://cdn.openbsd.org/pub/OpenBSD/6.6/amd64/SHA256",
            "iso_checksum_type": "sha256",
            "ssh_username": "{{user `ssh_user`}}",
            "ssh_password": "{{user `ssh_pass`}}",
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "/sbin/halt -p",
            "http_directory": "http",
            "http_port_min": "8954",
            "http_port_max": "8954",
            "disk_size": "{{user `disk`}}",
            "boot_command": [
                "A<enter><wait5>",
                "http://{{.HTTPIP}}:{{.HTTPPort}}/install.conf<enter>"
            ],
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{user `mem`}}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{user `cpus`}}"
                ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
                "scripts": [
                    "scripts/bootstrap.sh"
            ]
        },
        {
            "type": "file",
            "source": "http/rc.firsttime",
            "destination": "/etc/rc.firsttime"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant"
        }
    ]
}
